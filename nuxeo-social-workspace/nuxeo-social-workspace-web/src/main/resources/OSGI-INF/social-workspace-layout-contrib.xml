    <layout name="article">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>social_document_visibility</widget>
        </row>
        <row>
          <widget>content_picture</widget>
        </row>
      </rows>
    </layout>

    <layout name="news_item">
